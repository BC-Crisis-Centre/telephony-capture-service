FROM node:latest

# Create app directory
RUN mkdir -p /usr/src/service
WORKDIR /usr/src/service

# Install app dependencies
COPY package.json /usr/src/service
RUN npm install

# Bundle app source
COPY ./lib/mangle-smdr-files.js /usr/src/service/lib/
COPY ./lib/share /usr/src/service/lib/share

CMD [ "node", "lib/mangle-smdr-files.js"]

MAINTAINER Rod Monk
