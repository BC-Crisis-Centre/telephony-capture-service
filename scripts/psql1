#!/bin/bash

PROGNAME=$(basename $0)

source ./scripts/bash-functions

is-pg1-active
if [ $? == 0 ]; then
	msg 'pg1 is Active'
	docker exec -it pg1 psql --username postgres -p 5432
else
	is-pg1-pitr
	if [ $? == 0 ]; then
		echo 'pg1 is Standby'
		docker exec -it pg1 psql --username postgres -p 5433
	else
    	msg 'pg1 STOPPED or GONE'
	fi
fi
